<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

<LinearLayout
    android:id="@+id/lo_main_act"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerInParent="true">

    <EditText
        android:id="@+id/tv_main_act_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center"/>

    <EditText
        android:id="@+id/tv_main_act_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center"/>
    <EditText
        android:id="@+id/tv_main_act_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center"/>
    <EditText
        android:id="@+id/tv_main_act_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center"/>
    <EditText
        android:id="@+id/tv_main_act_num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center"/>
    <EditText
        android:id="@+id/tv_main_act_num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center"/>


</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/lo_main_act"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btn_main_act_makenum"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/lo_main_act"
        android:src="@drawable/A"
        android:background="#ffffff"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_main_act"

        android:layout_toRightOf="@id/btn_main_act_makenum"
        android:text="초기화" />

</LinearLayout>

</RelativeLayout>